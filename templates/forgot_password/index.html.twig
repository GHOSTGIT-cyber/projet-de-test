{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="background-image">
    <div class="login-card">
        <h2 class="login-title">MOT DE PASSE OUBLIÉ ?</h2>

        {# Affichage des messages flash (erreurs ou succès) #}
        {% for message in app.flashes('error') %}
            <p class="error-message">{{ message }}</p>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <p class="success-message">{{ message }}</p>
        {% endfor %}

        <form method="post" class="login-form">
            <label for="email" class="login-label">EMAIL</label>
            <div class="input-wrapper">
                <input type="email" id="email" name="email" placeholder="Entrez votre email" required class="login-input">
                <div class="input-underline"></div>
            </div>

            <button type="submit" class="button button--primary">Envoyer un email de réinitialisation</button>
        </form>

        <a href="{{ path('app_login') }}">Se connecter</a>

        <img src="{{ asset('images/gefor.jpg') }}" alt="Groupe Gefor" class="login-logo">
    </div>
</div>
{% endblock %}
